# Nexus Backend (Fastify + PostgreSQL)
PORT=3000
DATABASE_URL=postgres://postgres:postgres@127.0.0.1:5432/nexus

# JWT for session tokens (change in production)
JWT_SECRET=change_me_long_random

# Webhook security (HMAC sha256 secret)
WEBHOOK_SECRET=change_me_webhook_secret

# AES-256-GCM key encryption secret (32+ chars recommended)
KEY_ENCRYPTION_SECRET=change_me_aes_secret (any long passphrase)

# Encrypted treasury private key (base64 payload from encrypt helper)
TREASURY_ENCRYPTED_KEY=PASTE_ENCRYPTED_VALUE_HERE

# Optional for sending withdrawals (worker)
CHAIN_RPC_URL=https://mainnet.infura.io/v3/YOUR_KEY

# CORS allowed origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:5175,https://nr.stackmeridian.com,https://nradmin.stackmeridian.com
